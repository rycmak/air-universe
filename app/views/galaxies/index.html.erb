<%= render "header" %>

<section class="container p-5">
  <div class="row">
    <% @galaxies.each do |galaxy| %>
      <div class="div col-4">
        <div class="card rounded bg-transparent border-0 galaxy">
          <div class="card-header rounded-lg p-0 bg-white" style="position: relative;">
            <div class="m-3" style="position: absolute; bottom: 0;">
              <h5 class="font-weight-bold card-title mt-3"><%= link_to galaxy.name, galaxy_path(galaxy), class: "text-white" %></h5>
            </div>
            <%= cl_image_tag galaxy.photo.key, class: "galaxy-thumbnail" %>
          </div>
          <div class="card-body p-2 text-white">
            <div class="text-muted">
              <%= cl_image_tag galaxy.owner.photo.key, radius: :max, gravity: :face, class: "avatar avatar-md" %>
              <span class="ml-1 small font-weight-normal"><%= galaxy.owner.first_name %> <%= galaxy.owner.last_name%></span>
              <span class="float-right"><i class="far fa-hand-spock"></i><i class="far fa-hand-spock"></i><i class="far fa-hand-spock"></i><i class="far fa-hand-spock"></i><i class="far fa-hand-spock"></i></span>
            </div>
          </div>
          <div class="div card-footer text-white border-0 bg-transparent">
            <span class="float-right">$<%= galaxy.rate %>/night</span>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</section>
